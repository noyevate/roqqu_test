class _ActionButton extends StatelessWidget {
  final IconData icon;
  final String label;
  const _ActionButton({required this.icon, required this.label});

  @override
  Widget build(BuildContext context) {
    return Column(
      children: [
        CircleAvatar(radius: 24, backgroundColor: AppColors.tertiaryBackground, child: Icon(icon, color: Colors.white)),
        const SizedBox(height: 8),
        Text(label),
      ],
    );
  }
}